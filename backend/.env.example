# Application Configuration
APP_NAME="Database Query Tool"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenAI Configuration (for NL2SQL features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database Configuration
# SQLite path defaults to ~/.db_query/db_query.db
# SQLITE_PATH=/custom/path/to/db_query.db

# Encryption Key Path
# Defaults to ~/.db_query/secret.key
# ENCRYPTION_KEY_PATH=/custom/path/to/secret.key

# Query Limits
MAX_QUERY_RESULT_ROWS=1000
METADATA_CACHE_TTL_HOURS=1
QUERY_HISTORY_LIMIT=50
